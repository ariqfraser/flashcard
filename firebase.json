{
    "hosting": {
        "public": "dist/flashcard/browser",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "site": "flashcard-c07be",
        "rewrites": [
            {
                "source": "/app/**",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8080
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
